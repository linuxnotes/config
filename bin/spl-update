#!/usr/bin/env bash
#
# Downloads latest sportlyzer database updates to local `sport` db.
#
# To use it, create ~/.splrc file and define spl_user and spl_pass in it.
#
source ~/.splrc

# Empty the possibly existing output dir
rm -rf ~/.spl-tmp
mkdir ~/.spl-tmp

# Download the archive
curl -u $spl_user:$spl_pass -o ~/.spl-tmp/dump.zip https://beta3.sportlyzer.com/export.php?pass=$spl_pass

# Unzip it
unzip ~/.spl-tmp/dump.zip -d ~/.spl-tmp

# Import to database
mysql sport < ~/.spl-tmp/dump.sql

# Leave the files to output dir for possible inspection.
